# frozen_string_literal: true

# Generated via
#  `rails generate hyku_knapsack:work_resource <%= class_name %><%= " --flexible" if flexible? %>`
class <%= class_name %>Indexer < Hyrax::ValkyrieWorkIndexer
<% unless flexible? -%>
  include Hyrax::Indexer(:basic_metadata)
  include Hyrax::Indexer(:<%= file_name %>)
<% end -%>
  include HykuIndexing
<% if flexible? -%>
  # check_if_flexible adds Hyrax::Indexer with M3SchemaLoader for flexible models
<% end -%>
  check_if_flexible(<%= class_name %>)
end