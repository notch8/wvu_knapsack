<div class="container mb-4"><!--- BEGIN FEATURED WORKS/HOME TEXT SECTION -->
  <div class="row">
    <div class="col-6">
      <% if controller_name == 'homepage' %>
      <!-- container around the facet menu -->
      <div class="bg-white rounded-sm m-2">
        <%= render 'themes/wvu_home/facets' %>
      </div>
      <% end %>
    </div>
    <!-- Mobile style - Homepage Text Block - when on sm and below render full width col-12 -->
    <div class="col-6">
      <div class="bg-white rounded-sm m-2">
        <%= render 'themes/wvu_home/home_text' if controller_name == 'homepage' %>
      </div>
    </div>
  </div>
  <div class="row">
    <% if display_content_block? @home_text %> <!-- if the content block is displayed then display the featured works section to be a 4 column layout on min-width medium col-md-8 and full width on sm and below col-12 -->
      <div class="col-12 featured-works-container">
        <%= render 'layouts/share_your_work_row' if controller_name == 'homepage' %> <!-- render the sywb row in 4 column layout -->
        <h4>Featured Works</h4>
          <%= render 'hyrax/homepage/featured_works' %>
      </div>
    <% else %> <!-- if the content block is not displayed the show the featured works section as a full width 6 column layout col-12 -->
      <div class="col-12 cultural-repository featured-works-container">
        <%= render 'layouts/share_your_work_row' if controller_name == 'homepage' %> <!-- render the sywb row in 6 column layout -->
        <h4>Featured Works</h4>
        <%= render 'hyrax/homepage/featured_works' %>
      </div>
    <% end %>
  </div>
</div><!--- END FEATURED WORKS/HOME TEXT SECTION -->
