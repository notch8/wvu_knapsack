<% # OVERRIDE: Hyrax v5.0.0rc2 template to remove the render of the /controls partial, removed the background gradient span, and added share your work btn %>
<% content_for(:navbar) do %>
  <div class="image-masthead cultural-homepage">
    <!-- wvu repository homepage -->
    <div class="background-container banner-image" title="<%= block_for(name: 'banner_image_text') %>" style="background-image: url('<%= "#{banner_image}?#{Time.now.to_i}" %>')"></div>
    <div class="container mt-5">
      <div class="row">
        <% if controller_name == 'homepage' %>
        <div class="facet-panel-background-color col-6 col-md-4 my-lg-2">
          <%= render 'facets' %>
        </div>
        <% end %>

          <div class="col-6 col-md-7 mx-auto my-auto">
            <%= render partial: 'catalog/search_form' %>
          </div>

      </div>
      <div class="offset-md-1 site-title-container">
        <div class="site-title h1 mb-0">
          <%= render 'hyrax/homepage/marketing' %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% content_for(:precontainer_content) do %>
  <%= render 'hyrax/homepage/announcement' if controller_name == 'homepage' || controller_name == 'hyrax_contact_form' || controller_name == 'pages' %>
<% end %>

<%= render template: 'layouts/hyrax' %>
